name: SpringBoot CI

on: [ push ]

jobs:
  Build:
    name: test, build and extract layers
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: maven
      - name: Build with Maven
        run: mvn --batch-mode --update-snapshots clean package -DskipTests
      - name: Extract layers
        run: cp target/*.jar app.jar && java -Djarmode=layertools -jar app.jar extract

  Docker-Image:
    runs-on: ubuntu-latest
    steps:
      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v2
      - name: Build and push
        uses: docker/build-push-action@v4
        with:
          context: .
          file: ./dockerfiles/Github_Dockerfile
          push: true
          tags: ${{ secrets.DOCKERHUB_USERNAME }}/widget-service:latest
